{
  "name": "api-task-manager",
  "version": "1.0.0",
  "description": "Api for task manager app with express and prisma, using sqlite as database and typescript, eslint and prettier for code quality",
  "main": "index.js",
  "author": "Diego Toro Reyes <dtoro.a.s@gmail.com>",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "api",
    "task-manager",
    "express",
    "prisma",
    "sqlite",
    "typescript",
    "eslint",
    "prettier"
  ],
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.2.0",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
